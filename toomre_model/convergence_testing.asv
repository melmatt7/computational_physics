m1 = 1;
m2 = 0.5;
r = 0.5;
tmax = 5;
    
[t6, r6]   =  two_body(tmax, 6, m1, m2, r);
[t7, r7]   =  two_body(tmax, 7, m1, m2, r);
[t8, r8]   =  two_body(tmax, 8, m1, m2, r);
[t9, r9]   =  two_body(tmax, 9, m1, m2, r);

r6 = r6(1, 1, :);
r6 = reshape(r6, [1, length(r6)]);
r7 = r7(1, 1, :);
r7 = reshape(r7, [1, length(r7)]);
r8 = r8(1, 1, :);
r8 = reshape(r8, [1, length(r8)]);
r9 = r9(1, 1, :);
r9 = reshape(r9, [1, length(r9)]);

clf; hold on; 
figure(1);
plot(t6, r6, 'r-.o')
plot(t7, r7, 'g-.+'); 
plot(t8, r8, 'b-.*');
plot(t9, r9, 'c-.d');

r7 = r7(1:2:end);
r8 = r8(1:4:end);
r9 = r9(1:8:end);

dr67 = r6 - r7;
dr78 = r7 - r8;
dr89 = r8 - r9;

clf; hold on; 
figure(2);
plot(t6, dr67, 'r-.o')
plot(t6, dr78, 'g-.+')
plot(t6, dr89, 'b-.*')

dr78 = 4 * dr78;
dr89 = 16 * dr89;

clf; hold on; 
figure(3);
plot(t6, dr67, 'r-.o'); 
plot(t6, dr78, 'g-.+');
plot(t6, dr89, 'b-.*'); 